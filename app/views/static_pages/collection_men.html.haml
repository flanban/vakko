    %li.aspect-ratio-2
      =link_to image_tag('mens_collection_3.jpg', :class => 'rsImg grid-image desktop-image'), '#'
      .rollover
        .slide-title
          %h2=link_to 'vakko handkerchief', handkerchiefs_path
