      .rollover
        .slide-title
          %h2=link_to 'vakko perfume', mens_perfume_path
          %h6 explore
        =render "shared/buttons-type-a"
    %li.aspect-ratio-1
      =link_to image_tag('mens_collection_5.jpg', :class => 'rsImg grid-image desktop-image light-fade'), '#'
      .rollover
        .slide-title
          %h2=link_to 'vakko shirts & ties', shirts_and_ties_path
