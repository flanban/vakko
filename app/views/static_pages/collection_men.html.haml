    %li.aspect-ratio-2
      =link_to image_tag('mens_collection_6.jpg', :class => 'rsImg grid-image desktop-image'), '#'
      .rollover
        .slide-title
          %h2=link_to 'vakko shoes', mens_shoes_path
          %h6 explore
        =render "shared/buttons-type-a"