- content_for :page_js do
  = javascript_include_tag 'static_pages/index'

#mens-collection.landing-page-a
  %ul.entries.primary-grid
    %li.aspect-ratio-0
      .primary-slider.rsDefault.aspect-ratio-0
        .rsContent
          =link_to image_tag('mens_collection_1.jpg', :class => 'rsImg grid-image light-fade'),'#'
          .rollover
            .slide-title.big-title
              %h2=link_to 'spring / summer 2014', collection_men_path
              %h6 explore
        .rsContent
          =link_to image_tag('home-collection-1.jpg', :class => 'rsImg grid-image light-fade'),'#'
